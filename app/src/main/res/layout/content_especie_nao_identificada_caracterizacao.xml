<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.adensar.adensar_mobile.EspecieNaoIdentificadaCaracterizacaoActivity"
    tools:showIn="@layout/activity_especie_nao_identificada_caracterizacao">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/enid_filotaxia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/caracterizacao_filotaxia" />

        <Button
            android:id="@+id/enid_espinho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/caracterizacao_espinhos" />

        <Button
            android:id="@+id/enid_folha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/caracterizacao_folha" />

        <Button
            android:id="@+id/enid_folha_margem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/caracterizacao_folha_margem" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
