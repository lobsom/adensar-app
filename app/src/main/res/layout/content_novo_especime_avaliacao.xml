<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.adensar.adensar_mobile.NovoEspecimeAvaliacaoActivity"
    tools:showIn="@layout/activity_novo_especime_avaliacao">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fitossanidade"
            />

        <EditText
            android:id="@+id/fitossanidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/observacoes"
            />

        <EditText
            android:id="@+id/txtObservacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textImeMultiLine"
            android:lines="5"
            android:minLines="6"
            android:maxLines="10"
            android:gravity="top|left"
            android:scrollbars="vertical"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
