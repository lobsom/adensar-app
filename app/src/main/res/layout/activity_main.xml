<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.adensar.adensar_mobile.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/resMarginLeft">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_adensar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btLevarb_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inicarApp"
        />

    <Button
        android:id="@+id/levarb_consut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/consultar_levantamentos" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
